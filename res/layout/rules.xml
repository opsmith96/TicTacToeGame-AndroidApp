<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Tic Tac Toe is a turn based game where you place X's and O's trying to
        get three in a row. In this application you enter your name.
        During the game your name will have the color blue if its your turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp" />

    <Button
        android:text="GO BACK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonback"
        style="@android:style/Widget.Button"
        android:elevation="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>